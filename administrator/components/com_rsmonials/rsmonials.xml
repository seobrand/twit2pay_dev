		<filename>views/rsmonials/tmpl/default.xml</filename>
	</files>
	
	<languages>
		<language tag="en-GB">lang/en-GB.com_rsmonials.ini</language>
	</languages>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
		</sql>
	</uninstall>
	
	<installfile>install.rsmonials.php</installfile>
	<uninstallfile>uninstall.rsmonials.php</uninstallfile>
	
	<administration>
		<menu img="components/com_rsmonials/images/rs.png" link="option=com_rsmonials">COM_RSMONIALS</menu>
		<submenu>
			<menu link="option=com_rsmonials">COM_RSMONIALS_DASHBOARD</menu>
			<menu link="option=com_rsmonials&amp;task=testi">COM_RSMONIALS_TESTIMONIALS</menu>
			<menu link="option=com_rsmonials&amp;task=conf">COM_RSMONIALS_SETTINGS</menu>
			<menu link="option=com_rsmonials&amp;task=style">COM_RSMONIALS_DISPLAY_STYLE</menu>
			<menu link="option=com_rsmonials&amp;task=css">COM_RSMONIALS_CSS_FILE</menu>
			<menu link="option=com_rsmonials&amp;task=lang">COM_RSMONIALS_LANGUAGE_FILE</menu>
		</submenu>
    <files folder="admin">
      <filename>index.html</filename>
